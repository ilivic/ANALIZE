<Page x:Class="SalesManApp.PagesApp.PageAtho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManApp.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAtho">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Логин" Margin="10"/>
            <TextBox x:Name="TxtLogin"/>
            <TextBlock Text="Пароль" Margin="10"/>
            <PasswordBox x:Name="TxtPassword"/>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="Автороизая" Padding="10" Background="Pink" Click="ClEventAuthorization"/>
                <Button Content="Регистрация" Padding="10" Background="LightGreen" Click="CLEventRegistraion"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
