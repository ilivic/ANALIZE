<Window x:Class="SalesManApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesManApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" MouseLeftButtonDown="Window_MouseLeftButtonDown" WindowStyle="None" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="LightGreen">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Background="Transparent" Content="_" Padding="10 0 10 0" Click="Button_Click_2"/>
                <Button Background="Transparent" Content="+" Padding="10 0 10 0" Click="Button_Click_1"/>
                <Button Background="Transparent" Content="X" Padding="10 0 10 0" Click="Button_Click"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" />
    </Grid>
</Window>
