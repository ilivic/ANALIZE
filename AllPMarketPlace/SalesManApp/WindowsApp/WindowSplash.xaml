<Window x:Class="SalesManApp.WindowsApp.WindowSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesManApp.WindowsApp"
        mc:Ignorable="d"
        Title="WindowSplash" WindowStyle="None" Height="450" WindowStartupLocation="CenterScreen" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="24" Text="Подождите пару минут, а мы пока"/>
            <TextBlock FontSize="24" Text="{Binding text}"/>
            <ProgressBar x:Name="ProgBarTick" Margin="10" Height="20" Background="Transparent" Foreground="Purple" Maximum="100" BorderBrush="Transparent"/>
            <TextBlock FontSize="24" x:Name="TxtProgress" Text="0%" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
